<h2>New Movies</h2>
<form method="POST" action="">
  <input type="text" name="title" placeholder="Title of the movie" />
  <input type="text" name="genre" placeholder="Genre of the movie" />
  <input type="text" name="plot" placeholder="Plot of the movie" />
  <select name="cast" multiple>
    <% celebrities.forEach(celebrity => { %>
    <option value="<%- celebrity._id %>"> <%-celebrity.name%> </option>
    <% }) %>
  </select>

  <button type="submit">SUBMIT</button>
</form>
